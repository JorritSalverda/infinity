metadata:
  name: {{.ApplicationName}}
  type: library
  language: go

build:
  stages:
  - name: build-and-lint
    stages:
    - name: lint
      image: golangci/golangci-lint:latest-alpine
      commands:
      - golangci-lint run
    - name: build
      image: golang:1.16-alpine
      env:
        CGO_ENABLED: 0
      commands:
      - go test -short ./...
      - go build -a -installsuffix cgo -o {{.ApplicationName}} .